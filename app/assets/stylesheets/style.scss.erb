$light_grey: #f9f9f9;
$sea_green: #75b6b8;
$dark_grey: #404040;
$dull_maroon: #954451;
$blue: #579cab;

.light_grey{
	color: $light_grey;
}
.sea_green, a.sea_green{
	color: $sea_green;
}
.dark_grey{
	color: $dark_grey;
}
.dull_maroon{
	color: $dull_maroon;
}
.blue{
	color: $blue;
}
.white{
	color: white;
}
.roman, .normal{
	font-family: NeuzeitgroT;
}
.bold{
	font-family: NeuzeitgroT_Bold;
}
h2{
	font-size: 22px;
}
h3{
	font-size: 25px;
}
.wide_space{
	letter-spacing: 5px;
}
.logo{
	font-size: 30px;
	img{
		margin-top: -7px;
	}
}
.header_wrapper{
	height: 36px;
	background: url(<%= asset_path( 'header_bg.png' ) %>) left top repeat-x;
	a, a:visited {
		color: $light_grey;
	}
	a.sea_green{
		color: $sea_green;
	}
}
.light_grey_bg{
	background-color: $light_grey;
}
.blue_bg{
	background: url(<%= asset_path('top_blue_bg.jpg') %>) 0 0 repeat-x;
}
.bottom_blue_bg{
	background: url(<%= asset_path('bottom_blue_bg.jpg') %>) 0 0 repeat-x;
}
.intro_text{
	font-size: 40px;
	line-height: 50px;
	text-shadow: 1px 2px #5F9C9E;
}
.intro_fixed_rate{
	font-size: 30px;
	text-shadow: 1px 2px #5F9C9E;
}
.speedometer{
	margin-top: -15px;
}
.hiw_text{
	height: 54px;
	padding-top: 3px;
}
.white_bg{
	background-color: white;
}
.empty_div{
	margin-top: -38px;
}
.hiw{
	margin-left: -20px;
}
.hiw_pay{
	padding-left: 65px;
}
.guarantee{
	width: 740px;
	font-weight: normal;
}
.guarantee, .logo_glossy{
	padding-left: 91px;
}
.logos{
	margin-bottom: 100px;
	margin-top: 40px;
}
.link_to_button{
	display: block;
	font-size: 20px;
	width: 284px;
	padding-top: 18px;
	padding-bottom: 18px;
	margin: auto;
}
.button_arrow{
	margin-top: -2px;
}
.im_wr{
	float: left;
	width: 200px;
	height: 90px;
}

.maroon_bg{
	background: url(<%= asset_path( 'maroon_bg.png' ) %>) 0px 0px repeat-x;
}
.experienced_team_wrapper{
	padding-top: 96px;
}
.team_info{
	list-style: none;
	a, a:visited{
		color: $sea_green;
	}
}
.gaurav_div{
	margin-left: -60px;
}
.logo_dafiti, .logo_locondo{
	margin-left: -96px;
}
.logo_locondo{
	padding-bottom: 100px;	
}
.team_closing{
	margin-bottom: 70px;
}
.about_heading{
	margin-left: -40px;
}
.about_text{
	line-height: 23px;
	padding-right: 95px;
}
.contact_button{
	font-size: 20px;
}
.footer_black{
	height: 36px;
	background: $dark_grey left top repeat-x;
}